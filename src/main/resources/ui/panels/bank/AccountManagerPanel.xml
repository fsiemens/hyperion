<?xml version="1.0" encoding="UTF-8"?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../PanelSchema.xsd" id="p.konto.manager">
	<text-display>
		<h1>@{.konto.panel.manager.title}@</h1>
		<text>@{.konto.panel.manager.description}@</text>
	</text-display>
	
	<separator divider="false" spacing="2" />
	
	<section for="managers">
		<text-display>
			<quote> {mention}</quote>
		</text-display>
		<button id="b.konto.manager.remove" style="danger" params="konto, id" disabled="!#isOwner">
			<text>@{.konto.button.manager.remove}@</text>
		</button>
	</section>
	
	<text-display if="#managers.length == 0">
		<text>*@{.konto.no-managers}@*</text>
	</text-display>
	
	<separator divider="true" spacing="2" />
	
	<action-row>
		<button id="b.konto.back" style="secondary" params="konto">
			<text>@{.konto.button.back}@</text>
		</button>
		<button id="b.konto.manager.add" style="success" params="konto" disabled="!#isOwner">
			<text>@{.konto.button.manager.add}@</text>
		</button>
	</action-row>
</container>
