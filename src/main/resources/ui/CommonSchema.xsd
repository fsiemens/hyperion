	    </xs:simpleContent>
	  </xs:complexType>
	</xs:element>
    <xs:element name="h1" type="xs:string"/>
    <xs:element name="h2" type="xs:string"/>
    <xs:element name="h3" type="xs:string"/>
    <xs:element name="subtext" type="xs:string"/>
    <xs:element name="emoji" type="xs:string"/>
    <xs:element name="code" type="xs:string"/>
    <xs:element name="quote" type="xs:string"/>
    
   	<xs:simpleType name="paramsType">
    	<xs:list itemType="xs:string"/>
    </xs:simpleType>

</xs:schema>